<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  
  <servlet>
  	<servlet-name>AdminLoginServlet</servlet-name>
  	<servlet-class>servlet.AdminLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AdminLoginServlet</servlet-name>
  	<url-pattern>/admin/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AdminLoginVerifyServlet</servlet-name>
  	<servlet-class>servlet.AdminLoginVerifyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AdminLoginVerifyServlet</servlet-name>
  	<url-pattern>/admin/login-verify</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AdminMainServlet</servlet-name>
  	<servlet-class>servlet.AdminMainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AdminMainServlet</servlet-name>
  	<url-pattern>/admin/main</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AdminLoginOutServlet</servlet-name>
  	<servlet-class>servlet.AdminLoginOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AdminLoginOutServlet</servlet-name>
  	<url-pattern>/admin/login-out</url-pattern>
  </servlet-mapping>
  
  <filter>  
    <filter-name>LoginFilter</filter-name>  
    <filter-class>filter.LoginFilter</filter-class>  
    </filter>  
    <filter-mapping>  
    <filter-name>LoginFilter</filter-name>  
    <url-pattern>/admin/*</url-pattern>  
  </filter-mapping>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>